<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ProgressFragment">

    <!-- RecyclerView para los cumplimientos -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_Cumplimiento"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp" />

    <!-- BotÃ³n flotante para generar el PDF -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_generate_pdf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:src="@drawable/ic_pdf"
        android:contentDescription="Generar PDF"
        app:backgroundTint="@color/Red"
        style="@style/CustomFab" />
</FrameLayout>
